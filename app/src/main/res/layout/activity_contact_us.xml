<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmer.ContactUsActivity">

    <RelativeLayout
        android:id="@+id/relative_layout_contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/contactus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/contact_us"/>




    </RelativeLayout>


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ashoka_pillar"
        android:layout_centerHorizontal="true"
         android:layout_marginBottom="0dp"
        android:layout_marginTop="70dp"
        android:layout_above="@+id/relative_layout_contactus"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:onClick="callNowButton"
        android:drawableLeft="@drawable/ic_local_phone_white_24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Call Now"
        android:textColor="@color/white1"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="60dp"/>
</RelativeLayout>