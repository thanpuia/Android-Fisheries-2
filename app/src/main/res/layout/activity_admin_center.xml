<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/body"
    tools:context=".admin.AdminCenterActivity">

    <FrameLayout
        android:id="@+id/mFragmentFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_above="@+id/bottom"/>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#DFDFDF">

        <Button
            android:id="@+id/pondsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PONDS map"
            android:drawableTop="@drawable/btn_ponds"
            android:paddingTop="10dp"
            android:textSize="10dp"
            android:background="@drawable/button_transparent_shadow"
            android:onClick="pondsBtnClick"/>
        <Button
            android:id="@+id/farmersBtn"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FARMERS"
            android:drawableTop="@drawable/btn_farmer"
            android:textSize="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_transparent_shadow"
            android:onClick="farmersBtnClick"/>

        <Button
            android:id="@+id/smsBtn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:drawableTop="@drawable/btn_sms"
            android:textSize="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/button_transparent_shadow"
            android:onClick="smsBtnClick"/>
    </RelativeLayout>
</RelativeLayout>