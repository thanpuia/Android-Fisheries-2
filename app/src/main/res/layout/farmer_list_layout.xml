<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#F6F4F4"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_imageCirleImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer's Name"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/profile_imageCirleImageView"
                />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer's Address"
                android:layout_below="@+id/name_tv"
                android:layout_toRightOf="@id/profile_imageCirleImageView"
                />


            <LinearLayout
                android:id="@+id/space_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingRight="20dp"
                android:background="#8E8E8E"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/profile_imageCirleImageView"
                android:layout_below="@id/address_tv"
                android:orientation="horizontal" />
            <TextView
                android:id="@+id/tehsil_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Tehsil"
                android:layout_below="@id/address_tv"
                android:layout_toRightOf="@id/profile_imageCirleImageView"/>


            <TextView
                android:id="@+id/area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="area m2"
                android:layout_marginRight="50dp"
                android:layout_below="@id/address_tv"
                android:layout_alignParentRight="true"

                />





        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
