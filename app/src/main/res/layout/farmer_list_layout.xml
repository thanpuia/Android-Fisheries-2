        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_imageCirleImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer's Name"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingTop="15dp"
                android:layout_toRightOf="@id/profile_imageCirleImageView"
                />

            <TextView
                android:id="@+id/farmer_approve_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="asdf"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer's Address"
                android:layout_below="@+id/name_tv"
                android:singleLine="true"
                android:layout_toRightOf="@id/profile_imageCirleImageView"
                />


<!--            <LinearLayout-->
<!--                android:id="@+id/space_horizontal"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:paddingRight="20dp"-->
