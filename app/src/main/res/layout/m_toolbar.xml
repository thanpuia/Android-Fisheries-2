<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/header_fishlogo_imageview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/fish_logo"/>

        <TextView
            android:id="@+id/header_appName"
            android:layout_toRightOf="@id/header_fishlogo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/app_name2"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIZORAM"
            android:layout_toRightOf="@id/header_fishlogo_imageview"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            android:layout_below="@id/header_appName"/>

        <Button
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_dehaze_black_24dp"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/toobarEditText"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Search for fish ponds"
        android:inputType="text"
        android:lines="1"
        android:textColorHint="#777272"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:textColor="#000"
        android:imeOptions="actionDone"/>
</LinearLayout>
